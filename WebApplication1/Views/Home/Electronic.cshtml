@{
    ViewBag.Title = "Elektronik";

    AllInOneEntities db = new AllInOneEntities();
    List<Cinsiyet> cinsiyetler = db.Cinsiyet.OrderBy(x => x.cinsiyet1).ToList();
    List<Cins> cinsler = db.Cins.OrderBy(x => x.cins1).ToList();
    List<Renk> renkler = db.Renk.OrderBy(x => x.renk1).ToList();
    List<Urun> urunler = db.Urun.Where(x => x.urunID > 1 && x.urunID < 8).ToList();
    List<UrunResmi> resimler = db.UrunResmi.Where(x => x.urunID > 1 && x.urunID < 53).ToList();

}

<div class="container">
    <div class="row">
        <div class="col-md-2">
            <div class="filterCard">
                <div class="filterName">
                    <p>Cinsiyet</p>
                </div>
                <div class="genderFilter">
                    <div class="overflow-auto">
                        @foreach (var x in cinsiyetler)
                        {
                            <div class="form-check">
                                <input class="form-check-input" type="checkbox" value="" id="">
                                <label class="form-check-label filterLine" for="defaultCheck1">@(x.cinsiyet1)</label>
                            </div>
                         }
                    </div>
                </div>
                <div class="filterName">
                    <p>Ürün Grubu</p>
                </div>
                <div class="categoryFilter">
                    <div class="overflow-auto">
                        @foreach (var y in cinsler)
                        {
                            <div class="form-check">
                                <input class="form-check-input" type="checkbox" value="" id="">
                                <label class="form-check-label filterLine" for="defaultCheck1">@(y.cins1)</label>
                            </div>
                         }
                    </div>
                </div>
                <div class="filterName">
                    <p>Renk</p>
                </div>
                <div class="colorFilter">
                    <div class="overflow-auto">
                        @foreach (var z in renkler)
                        {
                            <div class="form-check">
                                <input class="form-check-input" type="checkbox" value="" id="">
                                <label class="form-check-label filterLine" for="defaultCheck1">@(z.renk1)</label>
                            </div>
                         }
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-10"> 
            @foreach (var k in urunler)
            {
                <div class="col-md-4 productCard">
                    <div class="productImage">
                        <div class="productMainImage">
                            <img src="@(k.UrunResmi.First().Url.url1)" class="resim-wrap" id="main_img" alt="">
                        </div>
                        <div class="productImages">
                            @foreach (var r in k.UrunResmi)
                            {
                                <img src="@(r.Url.url1)" onclick="change_img(this);" id="thumb_img" alt="">
                            }
                        </div>
                    </div>
                    <div class="productInformation">
                        <div class="productName">@(k.adi)</div>
                        <div class="productDescription">@(k.aciklama)@(k.urunKodu)</div>
                        <div class="productPrice">@(k.fiyat) TL</div>
                        <a href="#" class="productBuy">Sepete Ekle</a>
                    </div>
                </div>
             }
        </div>
    </div>
</div>

<script type="text/javascript">
    var image = document.getElementById('main_img');
    function change_img(imgName) {
        image.src = imgName;
    }
</script>