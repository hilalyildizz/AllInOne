@{AllInOneEntities db = new AllInOneEntities();
    List<Gender> cinsiyetler = db.Gender.OrderBy(x => x.GenderName).ToList();
    List<Genus> cinsler = db.Genus.OrderBy(x => x.GenusName).ToList();
    List<Color> renkler = db.Color.OrderBy(x => x.ColorName).ToList();
    List<Product> urunler = db.Product.Where(x => x.ProductId > 1 && x.ProductId < 3).ToList();
    List<ProductImg> resimler = db.ProductImg.Where(x => x.ProductId > 1 && x.ProductId < 3).ToList();
    int index = 0; 
}

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
<div class="row productDetailArea">
    @foreach (var k in urunler)
    {
        <div class="col-md-7 productDetailImage">
            <div class="productDetalMainImage">
                <img src="@(k.ProductImg.First().Url.Url1)" class="resim-wrap" id="main_img@(index)" alt="">
            </div>
            <div class="productCardImages">
                @foreach (var r in k.ProductImg)
                {
                    <img src="@(r.Url.Url1)" onclick="change_img(this,'main_img@(index)'); " id="thumb_img" alt="">
                }
            </div>
        </div>
        <div class="col-md-5">
            <p class="newarrival text-center">YENİ</p>
            <div class="productCardInformation">
                <div class="productDetailName">@(k.Name)</div>
                <div class="productDetailDescription">@(k.Explanation)</div>
                <div class="productStars">
                    <a class="fa fa-star productStar" href=""></a>
                    <a class="fa fa-star productStar" href=""></a>
                    <a class="fa fa-star productStar" href=""></a>
                    <a class="fa fa-star productStar" href=""></a>
                    <a class="fa fa-star productStar" href=""></a>
                </div>
                <br><br />
                <div class="productDetailPrice">@(k.Price) </div>
                <br><br />
                <br><br />
                <a href="#" class="productDetailBuy">Sepete Ekle</a>
            </div>

        </div>
        }
    
</div>
<script type="text/javascript">
    function change_img(a, mainctl) {
        $('#' + mainctl).attr('src', a.src)
    }
    
</script>